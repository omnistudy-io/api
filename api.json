{
    "openapi": "3.0.0",
    "info": {
      "title": "OmniStudy API",
      "description": "API for the OmniStudy application",
      "version": "1.0.0"
    },
    "servers": [
      {
        "url": "http://localhost:3001",
        "description": "Development, staging, and production server (app is dockerized in one VM)"
      }
    ],
    "paths": {
      "/users": {
        "get": {
          "summary": "Get all users",
          "responses": {
            "200": {
              "description": "A list of all users",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "users": {
                        "type": "array",
                        "items": {
                          "type": "object",
                          "properties": {
                            "id": {
                              "type": "integer"
                            },
                            "name": {
                              "type": "string"
                            },
                            "email": {
                              "type": "string"
                            },
                            "role": {
                              "type": "string"
                            },
                            "createdAt": {
                              "type": "string"
                            },
                            "updatedAt": {
                              "type": "string"
                            }
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "components": {
      "schemas": {
        "User": {
          "properties": {
            "id": {
              "description": "Auto-incremented unique identifier of the user",
              "type": "integer"
            },
            "name": {
              "description": "Full name of the user",
              "type": "string"
            }
          }
        }
      }
    }
  }